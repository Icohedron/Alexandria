<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMaroon</item>
        <item name="colorPrimaryDark">@color/colorDarkMaroon</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:windowBackground">@color/colorBeige</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
    </style>

    <!-- Might cause button style to be unchangeable, delete if necessary -->
    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:textColor">@color/colorYellow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup menu theme   -->
    <style name="CustomPopupStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>

</resources>
